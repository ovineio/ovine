{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "lib": ["dom", "es2017"],
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "jsx": "react",
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~/*": ["./*"],
      "@core/*": ["../../../packages/core/lib/*"],
      "@craft/*": ["../../../packages/craft/lib/*"]
    },
    "types": [
      "@types/react",
      "@types/lodash",
      "@types/styled-components",
      "@types/react-router-dom",
      "amis/lib"
    ],
    "typeRoots": ["./typings"]
  },
  "include": ["./src", "./typings"],
  "exclude": ["node_modules", "__tests__", "./lib"]
}
